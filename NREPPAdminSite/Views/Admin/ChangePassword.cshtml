@model NREPPAdminSite.Models.ChangePasswordModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Change Password";
}

    
   
<div>
    @using (Html.BeginForm("ChangePassword", "Admin", new { returnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal" }))
    {
        @Html.AntiForgeryToken();
        <div class="col-sm-offset-3 col-sm-10">
            <h2>@ViewBag.Title</h2>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.CurrentPassword, new {@class = "col-sm-3 control-label"})
            <div class="col-sm-9">
                @Html.PasswordFor(m => m.CurrentPassword, new {@class = "form-control"})
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.NewPassword, new {@class = "col-sm-3 control-label"})
            <div class="col-sm-9">
                @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.ConfirmNewPassword, new { @class = "col-sm-3 control-label" })
            <div class="col-sm-9">
                @Html.PasswordFor(m => m.ConfirmNewPassword, new { @class = "form-control" })
            </div>
        </div>
        <div class="col-sm-offset-3 col-sm-9">
            <input type="submit" value="Change Password" class="btn btn-default" />
        </div>

    }
    @Html.ValidationSummary()
</div>


