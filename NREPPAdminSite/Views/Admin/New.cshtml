@model NREPPAdminSite.Models.RegisterViewModel
@{
    ViewBag.Title = "New";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.Title</h2>

<div>
    @using(Html.BeginForm("Register", "Admin", FormMethod.Post))
    {
        @Html.AntiForgeryToken();
        <div>
            <span style="padding-right: 10px;">@Html.LabelFor(m => m.UserName)</span>
            <span>@Html.TextBoxFor(m => m.UserName)</span>
        </div>
    
        <div>
            <span style="padding-right: 10px;">@Html.LabelFor(m => m.Password1)</span>
            <span>@Html.TextBoxFor(m => m.Password1)</span>
        </div>
        
        <div>
            <span style="padding-right: 10px;">@Html.LabelFor(m => m.Firstname)</span>
            <span>@Html.TextBoxFor(m => m.Firstname)</span><br />
            <span style="padding-right: 10px;">@Html.LabelFor(m => m.Lastname)</span>
            <span>@Html.TextBoxFor(m => m.Lastname)</span>
        </div>
        
        <label for="">Select a Role:</label>
        <select name="roleId">
            <option value="3">Principal Investigator</option>
            <option value="4">Lit Review</option>
            <option value="5">Review Coordinator</option>
            <option value="6">DSG PRM</option>
        </select>
        
        <input type="submit" value="Register" />
    }
</div>

