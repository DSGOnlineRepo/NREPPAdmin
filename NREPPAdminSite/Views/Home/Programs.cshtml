                </thead>
            </table>
        </div>
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        $("#updatedDate").datepicker();

        var userTable = $('#tblPrograms').DataTable({
            "dom": '<"top"i>rt<"bottom"lp><"clear">',
            ajax: "ProgramsList",
            serverSide: true,
            paging: true,
            columns: [
                { "data": "Title", "bSortable": true },
                { "data": "FullDescription" },
                { "data": "Status" },
                { "data": "UpdatedDate" },
                { "data": "Submitter" },
                { "data": "Id" },
                { "data": "DummyColumnForFilter" }
            ],
            "searchCols": [
               null,
               null,
               null,
               null,
               null,
               null,
               { "search": "filter-group-user" }
            ],
            order: [0, 'asc'],
            columnDefs: [
                {
                    render: function (data, type, row) {
                        if (row.Status !== "Pending Submission") {
                            return '<a href="/Program/View?InvId=' + row["Id"] + '">' + data + '</a>';
                        } else {
                            return '<a href="/Program/ReSubmission2?InvId=' + row["Id"] + '">' + data + '</a>';
                        }
                    },
                    targets: 0
                },
                {
                    render: function (data, type, row) {
                        var uDate = new Date(parseInt(data.substr(6)));
                        return uDate.toLocaleDateString("en-US");
                    },
                    targets: 3
                },
                { visible: false, targets: [5] },
                { visible: false, targets: [6] }
            ],
            tableTools: {
                sRowSelect: "os",
                sRowSelector: 'td:first-child'
            }
        });

        $(".filter-input-text").on("keyup", function () {
                userTable.column($(this).attr('data-column')).search($(this).val()).draw();
        });

        $('input[type=radio][name=filter-input-opt]').change(function () {
                userTable.column(6).search($(this).val()).draw();
        });

    });
</script>
