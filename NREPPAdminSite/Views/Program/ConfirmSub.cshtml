@model NREPPAdminSite.Models.IntervPageModel

@{
    ViewBag.Title = "Submit your Program";
    Layout = "~/Views/Shared/_Layout.cshtml";

    bool haveEval = false;
    
    foreach (NREPPAdminSite.Models.InterventionDoc document in Model.Documents)
    {
        if (document.DocumentTypeName == "Program Evaluation")
        {
            haveEval = true;
            break;
        }
    }
}

<div class="col-sm-6 col-sm-offset-3 submission-scope">
<h2>Step 4. Submit Your Application</h2><br />
<h3>Have you completed your application?</h3><br />

<div>
    <p>
        Have you completed your application?
    </p>

    @if (haveEval)
    {
        @Html.ActionLink("No, edit the application.", "ReSubmission2", new { InvId = Model.TheIntervention.Id })<br />
        @Html.ActionLink("Yes, submit.", "DoSubmit", new { InvId = Model.TheIntervention.Id })
    }
    else
    {
        
        <span>You have not provided at least one Program Evaluation document.</span><br /><br />
        <span class="submission-button1">@Html.ActionLink("Upload Additional Documents", "Submission4", new { InvId = Model.TheIntervention.Id })</span><br />
    }
</div>
